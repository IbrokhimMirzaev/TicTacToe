<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tortburchak_1"
    tools:context=".PlayerNicks">

    <ImageView
        android:id="@+id/xBtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/xBtn1"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/x_sign"
        app:layout_constraintEnd_toEndOf="@id/xBtn"
        app:layout_constraintStart_toStartOf="@id/xBtn"
        app:layout_constraintTop_toTopOf="@id/xBtn"
        app:layout_constraintBottom_toBottomOf="@id/xBtn"
        tools:layout_editor_absoluteY="55dp" />


    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:hint="Enter your name"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xBtn" />

    <ImageView
        android:id="@+id/oBtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit1" />

    <ImageView
        android:id="@+id/oBtn1"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/o_sign"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toEndOf="@id/oBtn"
        app:layout_constraintStart_toStartOf="@id/oBtn"
        app:layout_constraintTop_toTopOf="@id/oBtn"
        app:layout_constraintBottom_toBottomOf="@id/oBtn"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:hint="Enter your name"
        android:paddingLeft="40dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oBtn" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit2" />

</androidx.constraintlayout.widget.ConstraintLayout>